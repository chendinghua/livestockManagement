<resources>

    <!-- Base application theme. -->
    <style name="explorer_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/explorer_colorPrimary</item>
        <item name="colorPrimaryDark">@color/explorer_colorPrimaryDark</item>
        <item name="colorAccent">@color/explorer_colorAccent</item>
    </style>

    <style name="explorer_AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="explorer_AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="explorer_AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
