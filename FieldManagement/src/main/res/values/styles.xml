<resources>

    <!-- Base application theme. -->
    <style name="field_management_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/field_management_colorPrimary</item>
        <item name="colorPrimaryDark">@color/field_management_colorPrimaryDark</item>
        <item name="colorAccent">@color/field_management_colorAccent</item>
    </style>

    <style name="field_management_Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
