<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 将自定义的style取名为CustomTheme，父类为Theme.Holo.Light，也就是说默认背景是白底黑字（如果是Theme.Holo，则默认是黑底白字） -->
    <style name="user_mode_CustomTheme" parent="android:style/Theme.Holo.Light">
        <!-- 这是item的背景修改，不按时透明，按时显示绿色  -->
        <!-- <item name="android:selectableItemBackground">@color/white1</item>  -->
        <!-- <item name="android:actionDropDownStyle">@style/MyDropDownNav</item>
        <item name="android:dropDownListViewStyle">@style/MyDropDownListView</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabStyle</item> -->
        <item name="android:actionBarTabTextStyle">@style/user_mode_MyActionBarTabTextStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/user_model_actionbar_back</item>
    </style>
    <!-- Tab选项标签字体的样式 -->
    <style name="user_mode_MyActionBarTabTextStyle" parent="android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@drawable/user_model_check_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
